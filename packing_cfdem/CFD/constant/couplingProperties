// sub-model properties

constDiffSmoothingProps
{
    lowerLimit 0.05;          // 避免空隙率接近0引发耦合爆炸
    upperLimit 0.999;         // 上限限定
    smoothingLength 5e-4;     // 略增平滑长度
} 

implicitCoupleProps
{
    velFieldName "U";
    granVelFieldName "Us";
    voidfractionFieldName "voidfraction";
}

DiFeliceDragProps
{
    velFieldName "U";
    voidfractionFieldName "voidfraction";
    granVelFieldName "Us";
    verbose true;

    // 稳定性保护：限制最小空隙率与最大阻力放大
    epsilonMin 0.05;         // 若内核支持此键，将在drag模型中夹持空隙率
    dragLimit 1e6;           // 限制最大等效阻力系数（若模型支持）
}

