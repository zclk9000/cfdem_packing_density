FoamFile
{
    version     2.0;
    format      ascii;
    class       uniformDimensionedVectorField;
    location    "constant";
    object      g;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// 重力加速度设置
// 与DEM中的重力方向保持一致: 负Z方向
dimensions      [0 1 -2 0 0 0 0];
value           (0 0 -9.81);

